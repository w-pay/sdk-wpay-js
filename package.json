{
  "name": "@wpay/wallet-sdk",
  "version": "1.0.1",
  "description": "Library that can facilitate JS applications accessing the WPay API.",
  "main": "build/index.js",
  "engines": {
    "node": "~12.18"
  },
  "scripts": {
    "dist": "npm run test:node && npm run build && npm run test:pack",
    "doc": "rm -rf docs && typedoc --out docs src",
    "lint": "eslint src test",
    "clean": "rm -rf build dist",
    "build": "npm run compile && npm run pack",
    "compile": "npm run clean && npm run lint && tsc -p .",
    "pack": "webpack --mode production",
    "test:node": "find test/ -name *.test.ts | xargs mocha --timeout 1000",
    "test:pack": "npm run test:pack:customer && npm run test:pack:merchant && npm run test:pack:all",
    "test:pack:customer": "karma start test/webpack/customer/karma.config.js --single-run",
    "test:pack:merchant": "karma start test/webpack/merchant/karma.config.js --single-run",
    "test:pack:all": "karma start test/webpack/all/karma.config.js --single-run"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/woolworthslimited/sdk-wpay-js"
  },
  "author": "",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/woolworthslimited/sdk-wpay-js/issues"
  },
  "homepage": "https://github.com/woolworthslimited/sdk-wpay-js#readme",
  "dependencies": {
    "tslib": "^2.0.2"
  },
  "devDependencies": {
    "@tsconfig/recommended": "^1.0.1",
    "@types/mocha": "^8.0.3",
    "@typescript-eslint/eslint-plugin": "^4.4.0",
    "@typescript-eslint/parser": "^4.4.0",
    "eslint": "^7.11.0",
    "eslint-config-prettier": "^6.12.0",
    "hamjest": "^3.7.1",
    "jsdom": "^16.4.0",
    "karma": "^5.2.3",
    "karma-jsdom-launcher": "^8.0.2",
    "karma-mocha": "^2.0.1",
    "karma-typescript": "^5.2.0",
    "mocha": "^8.1.3",
    "prettier": "^2.1.2",
    "ts-loader": "^8.0.6",
    "ts-mockito": "^2.6.1",
    "ts-node": "^9.0.0",
    "tsconfig-paths": "^3.9.0",
    "typedoc": "^0.19.2",
    "typescript": "^4.0.3",
    "webpack": "^5.1.3",
    "webpack-cli": "^4.1.0"
  },
  "files": [
    "build/**/*"
  ]
}
